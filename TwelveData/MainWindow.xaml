<Window x:Class="TwelveData.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwelveData"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450" Background="Black">
    <Grid>
    <StackPanel 
        VerticalAlignment="Center">
    <Button 
        x:Name="Start"
        Width="100"
        Height="100"
        Content="Start"
        Click="Start_OnClick"/>
    <Button
        x:Name="Stop"
        Width="100"
        Height="100"
        Content="Stop"
        Click="Stop_OnClick"/>
    <Label
        x:Name ="LabelName"/>
    </StackPanel>
    </Grid>
</Window>
